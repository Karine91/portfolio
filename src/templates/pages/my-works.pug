extends ../template 

block variables
    - var title = "Мои работы"

block content
    header.header-container
        .parallax
            .layer.layer1
            .layer.layer2
            .layer.layer3
            .layer.layer4.cloud
            .layer.layer5
            .layer.layer6
            .layer.layer7.cloud
            .layer.layer8
            .layer.layer9
            .layer.layer10.cloud
            .parallax__color-overlay
        .header-bg
            +bg('portfolio_header' ,"", "common")    
        .header-content
            .header-content__top
                ul.socials
                    li.socials__item: a.socials__link(href="https://vk.com/gkarine" target="_blank"): +icon('vk' ,"socials__icon_top", "socials")
                    li.socials__item: a.socials__link(href="https://github.com/Karine91" target="_blank"): +icon('github' ,"socials__icon_top", "socials")
                    li.socials__item: a.socials__link(href="#" target="_blank"): +icon('in' ,"socials__icon_top", "socials")   
