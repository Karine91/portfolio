mixin icon(name,mod, name_group)
    - mod = mod || ''
    svg(class= name_group + "__icon icon icon-" + name + ' ' + mod width="30" height="25")
        use(xlink:href="assets/images/icons/sprite_" + name_group + ".svg#" + name)
mixin bg(name,mod, name_group)
    - mod = mod || ''
    svg(class= name_group + "__bg bg bg-" + name + ' ' + mod width="100%" height="100%")
        use(xlink:href="assets/images/icons/sprite_" + name_group + ".svg#" + name)
        
block variables

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        title #{title}
        meta(content="" name="description")
        meta(content="" name="keywords")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="assets/styles/app.min.css")    
        block head
        script(src="assets/scripts/bundle.js" defer)
    body
        block content
        block footer
            include common/footer.pug
        block menu
            include common/menu.pug